<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluemid"
    android:orientation="vertical"
    tools:context=".menu.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/consumo"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/consumoagua"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="17dp"/>

        <ImageView
            android:id="@+id/iv_vaso_cantidad"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/vv"/>

        <TextView
            android:id="@+id/aguaselecionada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="0 ml"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="17dp"/>
        <TextView
            android:id="@+id/aguasumatoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text=""
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="17dp"/>

        <Button
            android:id="@+id/botonagregar"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="+"
            android:layout_gravity="center"
            android:backgroundTint="@color/bluelow"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botton_navigation"
        app:itemBackground="@color/bluelow"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>